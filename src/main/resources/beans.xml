<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Prabhas"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="age" value="40"/>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Prabhasdsdacacas"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="age" value="40"/>
    </bean>

    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Prabhas"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="age" value="40"/>
    </bean>

    <bean name ="movie, movie1" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor2"/>
    </bean>

    <bean id="demo" class="com.stackroute.demo.BeanLifecycleDemoBean" init-method="customInit" destroy-method="customDestroy" >
    </bean>

    <bean id="beanPostProcessorDemoBean" class="com.stackroute.demo.BeanPostProcessorDemoBean">
    </bean>
</beans>